<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tv_free_"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/tr1111"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#FF3030"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coupen_apply">

        <TextView
            android:id="@+id/tv_coupon_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Check price after coupon des"
            android:textAlignment="center"
            android:textColor="@color/colorwh" />

        <Button
            android:id="@+id/coupon_des_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_bac"
            android:text="Redom"
            android:textColor="@color/colorwh"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/coupen_apply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="coupen_apply"
        app:layout_constraintEnd_toEndOf="@+id/ofers_apply"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/ofers_apply"
        app:layout_constraintTop_toBottomOf="@+id/ofers_apply" />

    <ImageView
        android:id="@+id/product_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/product_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="ttt"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/product_image"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/free_coupen_icon"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:tint="#90e"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/product_title"
        app:layout_constraintTop_toBottomOf="@+id/product_title"
        app:srcCompat="@android:drawable/stat_notify_more" />

    <TextView
        android:id="@+id/tv_free_coupen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="free"
        android:textSize="12sp"
        android:textColor="#90e"
        app:layout_constraintStart_toEndOf="@+id/free_coupen_icon"
        app:layout_constraintTop_toTopOf="@+id/free_coupen_icon" />

    <TextView
        android:id="@+id/product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="4999"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_free_coupen" />

    <TextView
        android:id="@+id/cuted_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="Rs-
599"
        app:layout_constraintBottom_toBottomOf="@+id/product_price"
        app:layout_constraintEnd_toStartOf="@+id/product_price" />

    <View
        android:id="@+id/product_cute_price_devider"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="@+id/cuted_price"
        app:layout_constraintEnd_toEndOf="@+id/cuted_price"
        app:layout_constraintStart_toStartOf="@+id/cuted_price"
        app:layout_constraintTop_toTopOf="@+id/cuted_price" />

    <TextView
        android:id="@+id/ofers_apply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="offersapply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/product_cute_price_devider"
        app:layout_constraintTop_toBottomOf="@+id/product_price" />

    <TextView
        android:id="@+id/product_quanity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Qty:2"
        android:backgroundTint="#000000"
        android:padding="3dp"
        android:drawablePadding="8dp"
        android:background="@drawable/border_bac"
        app:layout_constraintBottom_toBottomOf="@+id/coupen_apply"
        app:layout_constraintEnd_toStartOf="@+id/ofers_apply"
        app:layout_constraintHorizontal_bias="0.067"
        app:layout_constraintStart_toStartOf="@+id/tv_free_coupen"
        app:layout_constraintTop_toTopOf="@+id/ofers_apply"
        app:layout_constraintVertical_bias="0.526" />

    <LinearLayout
        android:id="@+id/remove_item_btn"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@color/colorwh"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tr1111"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/remove_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="remove item"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="112dp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>